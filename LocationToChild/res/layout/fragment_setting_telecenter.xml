<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.locationtochild.ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.locationtochild.ui.widget.TopTitleBar
        android:id="@+id/title_setting_telecenter"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        custom:leftSrc="@drawable/ic_titlebar_back"
        custom:titleText="@string/setting_main_telecenter" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dip"
        android:layout_marginRight="21dip"
        android:layout_marginTop="21dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/setting_telecenter_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:textColor="@color/theme_color"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/telecenter_qq_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_select"
                android:hint="@string/setting_telecenter_qq"
                android:padding="4dip"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/telecenter_qq_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_select"
                android:hint="@string/setting_telecenter_qq"
                android:padding="4dip"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/telecenter_qq_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_select"
                android:hint="@string/setting_telecenter_qq"
                android:padding="4dip"
                android:textColor="@color/text_color"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/setting_telecenter_submit"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_marginTop="14dip"
            android:background="@drawable/button_select"
            android:text="@string/setting_submit"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>