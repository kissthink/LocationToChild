<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:custom="http://schemas.android.com/apk/res/com.locationtochild.ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<com.locationtochild.ui.widget.TopTitleBar
        android:id="@+id/title_more_back"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        custom:leftSrc="@drawable/ic_titlebar_back"
        custom:titleText="@string/more_feedback" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:layout_margin="7dip"
	    android:orientation="horizontal"
	    >
	    <TextView
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="7dip"
	        android:text="感谢您提出宝贵的意见！"
	        android:layout_gravity="center_vertical"
	        android:textSize="18sp"
	        android:textColor="@color/dark_gray"/>
	    <Button
	        android:id="@+id/more_feedback_submit"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:layout_marginRight="7dip"
	        android:layout_gravity="center_vertical"
	        android:text="提交"
	        android:background="@drawable/button_select"/>
	</LinearLayout>
    <EditText
        android:id="@+id/more_feedback_text"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:padding="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:lines="7"
        android:background="@drawable/shape_frame_edit"
        android:hint="写下您遇到的问题或建议"
        android:inputType="textMultiLine"
        />
</LinearLayout>